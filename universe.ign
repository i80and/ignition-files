{
  "ignition": {
    "version": "3.4.0"
  },
  "kernelArguments": {
    "shouldExist": [
      "hardened_usercopy=1",
      "init_on_alloc=1",
      "init_on_free=1",
      "mitigations=auto,nosmt"
    ]
  },
  "storage": {
    "files": [
      {
        "path": "/etc/hostname",
        "contents": {
          "compression": "",
          "source": "data:,universe"
        },
        "mode": 420
      },
      {
        "path": "/etc/systemd/zram-generator.conf",
        "contents": {
          "compression": "",
          "source": "data:,%23%20This%20config%20file%20enables%20a%20%2Fdev%2Fzram0%20device%20with%20the%20default%20settings%0A%5Bzram0%5D%0Acompression-algorithm%3Dzstd%0A"
        },
        "mode": 420
      },
      {
        "path": "/etc/sysctl.d/90-sysrq.conf",
        "contents": {
          "compression": "gzip",
          "source": "data:;base64,"
        }
      }
    ]
  }
}
